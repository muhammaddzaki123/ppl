generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  email     String   @unique
  password  String // IMPORTANT: This should be a hashed password
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("admins")
}

model BahanMakanan {
  id        String   @id @default(uuid()) @db.Uuid
  kode      String   @unique
  nama      String
  stok      Int      @default(0)
  masuk     BahanMasuk[]
  keluar    BahanKeluar[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  satuanId  String?  @map("satuan_id") @db.Uuid
  satuan    Satuan?  @relation(fields: [satuanId], references: [id], onDelete: Restrict)

  @@map("bahan_makanan")
}

model Satuan {
  id            String         @id @default(uuid()) @db.Uuid
  nama          String         @unique
  bahanMakanans BahanMakanan[]
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  @@map("satuans")
}

model BahanMasuk {
  id             String      @id @default(uuid()) @db.Uuid
  bahanMakananId String      @map("bahan_makanan_id") @db.Uuid
  bahanMakanan   BahanMakanan @relation(fields: [bahanMakananId], references: [id])
  jumlah         Int
  tanggalMasuk   DateTime    @map("tanggal_masuk")
  createdAt      DateTime    @default(now()) @map("created_at")

  @@map("bahan_masuk")
}

model BahanKeluar {
  id             String      @id @default(uuid()) @db.Uuid
  bahanMakananId String      @map("bahan_makanan_id") @db.Uuid
  bahanMakanan   BahanMakanan @relation(fields: [bahanMakananId], references: [id])
  jumlah         Int
  tanggalKeluar  DateTime    @map("tanggal_keluar")
  createdAt      DateTime    @default(now()) @map("created_at")

  @@map("bahan_keluar")
}

model Klasifikasi {
  id                String              @id @default(uuid()) @db.Uuid
  nama              String
  spesifikasiBahans SpesifikasiBahan[]
  createdAt         DateTime            @default(now()) @map("created_at")
  updatedAt         DateTime            @updatedAt @map("updated_at")

  @@map("klasifikasis")
}

model SpesifikasiBahan {
  id            String      @id @default(uuid()) @db.Uuid
  bahan         String
  satuan        String
  spesifikasi   String
  klasifikasiId String      @map("klasifikasi_id") @db.Uuid
  klasifikasi   Klasifikasi @relation(fields: [klasifikasiId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  @@map("spesifikasi_bahans")
}
